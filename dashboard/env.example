# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_URL=http://localhost:3000

# App Domain Configuration
NEXT_PUBLIC_APP_DOMAIN=example.com
APP_DOMAIN=example.com
NEXT_PUBLIC_CNAME_TARGET=cname.example.com
NEXT_PUBLIC_DB_PROXY_HOST=db.example.com

# Enable or disable registration page
NEXT_PUBLIC_REGISTER_ENABLED=true

# Webhook API Key (shared with internal services)
WEBHOOK_API_KEY="your-webhook-api-key"

# Database
DATABASE_URL="mysql://root:password@localhost:3306/deployra"
JWT_SECRET="your-secret-key"

# Node environment
NODE_ENV=development

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=

# GitHub OAuth
NEXT_PUBLIC_GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# GitHub App (optional)
NEXT_PUBLIC_GITHUB_APP_NAME="your-github-app-name"
GITHUB_APP_ID="your-github-app-id"
GITHUB_APP_PRIVATE_KEY="your-github-app-private-key"
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret"

# AWS Configuration (for ECR)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# Local development port
PORT=3000
