# Server Configuration
PORT=8080

# Database
DATABASE_URL=user:password@tcp(localhost:3306)/deployra?parseTime=true

# JWT Secret (generate a random string)
JWT_SECRET=your_jwt_secret_here

# Encryption key for environment variables (must be exactly 32 bytes for AES-256)
# Generate with: openssl rand -hex 16 | tr -d '\n'
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Application URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:8080/api

# GitHub OAuth (optional - for GitHub login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# GitHub App (optional - for GitHub App integration)
GITHUB_APP_ID=
GITHUB_APP_NAME=
GITHUB_APP_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=

# Webhook API Key (used by internal services: builder, kronjob, kubestrator, kumonitor)
# All services must use the same key to authenticate with this API
WEBHOOK_API_KEY=your_secure_webhook_api_key_here

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# App Domain (base domain for service subdomains)
# If set to "example.com", services will be accessible at {subdomain}.example.com
# Leave empty to disable subdomain feature (only custom domains will work)
APP_DOMAIN=
